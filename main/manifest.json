{
  "name": "Simple Extension",
  "manifest_version": 3,
  "version": "1.0",
  "description": "Change webpage background color",
  "action": {
		"default_popup": "popup.html"
	  },
  "permissions": [
    "tabs",
    "scripting",
    "contextMenus", 
    "storage"
  ],
  "content_scripts": [
    {
      "js": ["scripts/jquery.js","scripts/jquery-ui.js", "scripts/utils.js", "scripts/viewer.js", "scripts/appmanager.js", "scripts/start.js", "scripts/text.js", "scripts/url.js", "scripts/color.js", "scripts/clipboard.js", "scripts/code.js"],
      "css" : ["style/appmenu.css", "style/clipboard.css", "style/viewer.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
