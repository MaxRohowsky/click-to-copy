{
  "name": "Click to Copy",
  "manifest_version": 3,
  "version": "1.0",
  "description": "Copy Text, Urls, and CSS with one Click!",
  "action": {

  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
		"*://*/*"
	],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/jquery.js",
        "scripts/jquery-ui.js",
        "scripts/viewer.js",
        "scripts/appmanager.js",
        "scripts/text.js",
        "scripts/url.js",
        "scripts/clipboard.js"
      ],
      "css": [
        "style/appmenu.css",
        "style/clipboard.css",
        "style/viewer.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}